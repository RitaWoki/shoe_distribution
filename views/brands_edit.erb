<div class= "row">
  <div class="col-sm-4 col-sm-offset-4">
    <form action="/brands/<%= @brand.id() %>" method="post">
      <input type="hidden" name="_method" value="patch">

      <h2>Edit this Brand:</h2>
      <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" name="name" value="<%= @brand.name %>">
      </div>
      <div class="form-group">
        <label for="store_ids[]" class="active">Which stores carry this brand?</label><br>
        <% @stores.each() do |store| %>
          <input type="checkbox" name = "store_ids[]" value="<%= store.id()%>" <%= 'checked' if store.brands.include?(@brand) %> > <%= store.name() %><br>
        <% end %>
      </div>
      <button type='submit'>Submit</button>
    </form>
  </div>
</div>
